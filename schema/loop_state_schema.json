{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Adaptive Loop State",
  "type": "object",
  "required": ["loop_id", "model", "runner", "rounds"],
  "properties": {
    "loop_id": {"type": "string"},
    "model": {"type": "string"},
    "runner": {"type": "string"},
    "created_at": {"type": "string"},
    "rounds": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["round_index", "round_id", "policy_version", "conditions"],
        "properties": {
          "round_index": {"type": "integer"},
          "round_id": {"type": "string"},
          "policy_version": {"type": "string"},
          "task_batch_file": {"type": "string"},
          "conditions": {
            "type": "array",
            "items": {"type": "string"}
          },
          "results": {"type": "object"}
        }
      }
    }
  }
}
