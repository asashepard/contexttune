{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Context Artifact",
  "description": "Structured context for SWE-bench patch generation.",
  "type": "object",
  "required": ["repo", "commit", "char_budget_total", "cards"],
  "properties": {
    "repo": {
      "type": "string",
      "description": "Repository in owner/name format."
    },
    "commit": {
      "type": "string",
      "description": "Commit SHA."
    },
    "char_budget_total": {
      "type": "integer",
      "description": "Total character budget for context body."
    },
    "cards": {
      "type": "array",
      "description": "Ordered list of context cards.",
      "items": {
        "type": "object",
        "required": ["id", "title", "body", "evidence", "confidence"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique card identifier."
          },
          "title": {
            "type": "string",
            "description": "Card title for display."
          },
          "body": {
            "type": "string",
            "description": "Card content (markdown)."
          },
          "evidence": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Sources used to generate this card."
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Confidence score (0-1)."
          }
        }
      }
    },
    "policy_version": {
      "type": "string",
      "description": "Context policy version used for card selection/tuning."
    },
    "round_id": {
      "type": "string",
      "description": "Adaptive loop round identifier."
    },
    "source_task_batch": {
      "type": "string",
      "description": "Path or identifier of source task batch used in this round."
    }
  }
}
